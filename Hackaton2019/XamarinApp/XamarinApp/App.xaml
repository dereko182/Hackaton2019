<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <Color x:Key="Primary">#a1887f</Color>
            <Color x:Key="PrimaryDark">#715a52</Color>
            <Color x:Key="PrimaryLight">#d1b7ad</Color>
            <Color x:Key="Secondary">#6ca642</Color>
            <Color x:Key="SecondaryDark">#3c7712</Color>
            <Color x:Key="SecondaryLight">#9dd870</Color>
            
            <Color x:Key="BlackSecondaryText">#8B000000</Color>
            <Color x:Key="BlackPrimaryText">#DC000000</Color>
            
            <x:Double x:Key="TextPrimary">16</x:Double>
            <x:Double x:Key="TextSecondary">14</x:Double>
            
            <Color x:Key="NavigationPrimary">#2196F3</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>